{
  "name": "rc-countdown-view",
  "version": "3.0.0",
  "description": "A simple countdown react component.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "test": "jest --verbose",
    "start": "dumi dev",
    "doc": "dumi build",
    "build": "npm run build:module && npm run build:types",
    "build:module": "rm -rf lib && rm -rf es && rollup -c",
    "build:types": "rm -rf types && tsc -p tsconfig.build.json --outDir types -d --emitDeclarationOnly",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src",
    "lint-fix": "npm run lint -- --fix",
    "prettier": "prettier --write **/*",
    "commit": "cz",
    "prepublishOnly": "npm test && npm run build",
    "tsc": "tsc --noEmit",
    "prepare": "husky install && dumi setup"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint",
    "**/*.{css,scss,less,js,jsx,ts,tsx,json,md}": "prettier -w"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caijf/rc-countdown-view.git"
  },
  "keywords": [
    "countdown",
    "react",
    "component"
  ],
  "author": "caijf",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/caijf/rc-countdown-view/issues"
  },
  "homepage": "https://github.com/caijf/rc-countdown-view#readme",
  "dependencies": {
    "countdown-pro": "^2.2.1",
    "rc-hooks": "^3.0.16",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "dumi": "^2.4.21",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^8.0.3",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^13.3.0",
    "prettier": "^3.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup": "^4.46.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": ">=16.8.6"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
